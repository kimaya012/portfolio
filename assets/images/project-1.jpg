<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  <rect width="400" height="300" fill="url(#grad1)"/>
  
  <!-- Modern shopping interface -->
  <rect x="80" y="60" width="240" height="140" rx="12" fill="white" opacity="0.95" filter="url(#glow)"/>
  
  <!-- Voice waves animation -->
  <circle cx="200" cy="130" r="20" fill="none" stroke="#667eea" stroke-width="3" opacity="0.6"/>
  <circle cx="200" cy="130" r="35" fill="none" stroke="#667eea" stroke-width="2" opacity="0.4"/>
  <circle cx="200" cy="130" r="50" fill="none" stroke="#667eea" stroke-width="1" opacity="0.2"/>
  
  <!-- Microphone icon -->
  <rect x="190" y="115" width="20" height="25" rx="10" fill="#667eea"/>
  <rect x="185" y="145" width="30" height="4" fill="#667eea"/>
  <rect x="197" y="149" width="6" height="12" fill="#667eea"/>
  
  <!-- Shopping elements -->
  <rect x="100" y="80" width="40" height="8" rx="4" fill="#f0f0f0"/>
  <rect x="100" y="95" width="60" height="8" rx="4" fill="#f0f0f0"/>
  <rect x="260" y="80" width="40" height="8" rx="4" fill="#f0f0f0"/>
  <rect x="240" y="95" width="60" height="8" rx="4" fill="#f0f0f0"/>
  
  <!-- Cart icon -->
  <rect x="250" y="170" width="50" height="20" rx="3" fill="none" stroke="#667eea" stroke-width="2"/>
  <circle cx="260" cy="195" r="5" fill="#667eea"/>
  <circle cx="290" cy="195" r="5" fill="#667eea"/>
  
  <text x="200" y="235" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="24" font-weight="bold">ShopEase</text>
  <text x="200" y="255" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="14" opacity="0.9">Voice Shopping Assistant</text>
</svg>