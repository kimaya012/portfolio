<svg width="120" height="120" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <radialGradient id="avatarBackground" cx="50%" cy="30%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
    </radialGradient>
    <linearGradient id="avatarBorder" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ffd89b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#19547b;stop-opacity:1" />
    </linearGradient>
    <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
      <feDropShadow dx="0" dy="4" stdDeviation="6" flood-opacity="0.25"/>
    </filter>
  </defs>
  <!-- Border circle -->
  <circle cx="60" cy="60" r="58" fill="url(#avatarBorder)" filter="url(#shadow)"/>
  <!-- Main background -->
  <circle cx="60" cy="60" r="52" fill="url(#avatarBackground)"/>
  <!-- Initials -->
  <text x="60" y="75" text-anchor="middle" fill="#ffffff" font-family="Poppins, sans-serif" font-size="32" font-weight="600">KM</text>
</svg>